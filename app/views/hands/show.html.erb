<% content_for :bcrumb do %>
        <li><a href="<%= game_path(@hand.game) %>">Game <%= @hand.game.id %></a></li>
        <li class="active">Round <%= @hand.sequence %></li>
<% end %>
<h2>Round <%= @hand.sequence %></h2>
<div><%= @hand.dealer.name %> should deal <%= @hand.no_of_cards %> cards</div>
<% if @hand.suit.id < 5 %>
<div>Trumps are <span class="suits <%= @hand.suit.name %>" alt="Trumps = <%= @hand.suit.name %>"><%= raw(@hand.suit.text) unless @hand.suit.id==5 %></span></div>
<% else %>
<div>Winner of last hand should pick trumps</div>
<% end %>